:80 {
        root * /www
        handle_path /ui/* {
                file_server {
                        pass_thru
                }
        }
        handle /ui/* {
                rewrite * /ui{uri}
                # ðŸ“¢ This is the URL of the EdgeDB Server ðŸ“¢
                # It is configured according to environment variables
                reverse_proxy * ${EDGEDB_HOST}:${EDGEDB_PORT}
        }
        file_server {
                index index.html
        }
        encode gzip
}
